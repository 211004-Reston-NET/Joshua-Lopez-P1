@model IEnumerable<WebUI.Models.ProductsVM>

<link rel="stylesheet" href="~/css/Tables.css" />
<h1>List of Products</h1>

<table class="table table-striped table-hover">
    <caption>Table Provides a list of products currently establsihed in the database</caption>
    <tr>
        
        <th scope="col">Product Name </th>
        <th scope="col">Price</th>
        <th scope="col">Description</th>
        <th scope="col">Category</th>
        <th scope="col">Available</th>



    </tr>
    @foreach(ProductsVM line in Model)
    {
        <tr>
            
            <td>@Html.DisplayFor(modelItem => line.Id)</td>
            <td>@Html.DisplayFor(modelItem => line.Name)</td>
            <td>@Html.DisplayFor(modelItem => line.Price)</td>
            <td>@Html.DisplayFor(modelItem => line.Description)</td>
            <td>@Html.DisplayFor(modelItem => line.Category)</td>
             <td>
                <!--First parameter of ActionLink is the name it will give for this element -->
                <!--Second parameter will point to the action of the restaurant controller-->
                <!--Third parameter will give the information from the view to the controller-->
                <button class="btn btn-danger">@Html.ActionLink("Select Product","ConfirmAddition",new {p_ProductId = line.Id,p_StoreId=ViewBag.StoreIdentifier}, new {@style="color: white;"})</button>
                </td>
        </tr>
    }
    
        
    
</table>