@model IEnumerable<WebUI.Models.LineItemVM>

<link rel="stylesheet" href="~/css/Tables.css" />
<h1>List of Products</h1>

<table class="table table-striped table-hover">
    <caption>Table Provides a list of products currently establsihed in the selected store</caption>
    <tr>
        <th scope="col">Store Id Number</th>
        <th scope="col">Id Number</th>
        <th scope="col">Product Name </th>
        <th scope="col">Price</th>
        <th scope="col">Description</th>
        <th scope="col">Category</th>
        <th scope="col">Available</th>



    </tr>
    @foreach(LineItemVM line in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => line.StoreID)</td>
            <td>@Html.DisplayFor(modelItem => line.item.Id)</td>
            <td>@Html.DisplayFor(modelItem => line.item.Name)</td>
            <td>@Html.DisplayFor(modelItem => line.item.Price)</td>
            <td>@Html.DisplayFor(modelItem => line.item.Description)</td>
            <td>@Html.DisplayFor(modelItem => line.item.Category)</td>
            <td>@Html.DisplayFor(modelItem => line.Quantity)</td>
             <td>
            <button class="btn btn-danger">@Html.ActionLink("Edit Quantity","EditStock",new {p_id = line.item.Id, p_quantity = line.Quantity,p_sid=line.StoreID}, new {@style="color: white;"})</button>
            </td>
        </tr>
    }
    
        
    
</table>