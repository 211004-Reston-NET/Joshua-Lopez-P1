@model IEnumerable<WebUI.Models.StoreFrontVM>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Login</title>
    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>
</head>
<a class="btn btn-primary text-white" asp-controller="StoreFront" asp-action="Search">Search Store</a>
<h1>List of StoreFronts</h1>

<table class="table table-striped table-hover">
    <tr>
        <th>Id Number</th>
        <th>Store Name </th>
        <th>Store Location</th>


    </tr>
    @foreach(StoreFrontVM item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                 <td>
                <!--First parameter of ActionLink is the name it will give for this element -->
                <!--Second parameter will point to the action of the restaurant controller-->
                <!--Third parameter will give the information from the view to the controller-->
                <button class="btn btn-danger">@Html.ActionLink("ViewProducts","SeeItems",new {p_id = item.Id,p_sid=item.Id}, new {@style="color: white;"})</button>
              </td>
            
            
        </tr>
    }
    
</table>