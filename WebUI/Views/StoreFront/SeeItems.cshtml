@model IEnumerable<WebUI.Models.LineItemVM>

<h1>List of Products</h1>

<table class="table table-striped table-hover">
    <tr>
        <th>Store Id Number</th>
        <th>Id Number</th>
        <th>Product Name </th>
        <th>Price</th>
        <th>Description</th>
        <th>Category</th>
        <th>Available</th>



    </tr>
    @foreach(LineItemVM line in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => line.StoreID)</td>
            <td>@Html.DisplayFor(modelItem => line.item.Id)</td>
            <td>@Html.DisplayFor(modelItem => line.item.Name)</td>
            <td>@Html.DisplayFor(modelItem => line.item.Price)</td>
            <td>@Html.DisplayFor(modelItem => line.item.Description)</td>
            <td>@Html.DisplayFor(modelItem => line.item.Category)</td>
            <td>@Html.DisplayFor(modelItem => line.Quantity)</td>
             <td>
                <!--First parameter of ActionLink is the name it will give for this element -->
                <!--Second parameter will point to the action of the restaurant controller-->
                <!--Third parameter will give the information from the view to the controller-->
               <button class="btn btn-danger">@Html.ActionLink("Purchase","Purchase",new {p_id = line.item.Id, p_quantity = line.Quantity,p_sid=line.StoreID, p_total=line.item.Price}, new {@style="color: white;"})</button>
            </td>
        </tr>
    }
    
        
    
</table>