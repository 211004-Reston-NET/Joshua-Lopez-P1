@model IEnumerable<WebUI.Models.LineItemVM>
    <link rel="stylesheet" href="~/css/Tables.css" />

<h1>List of Products</h1>

<table class="table table-striped table-hover">
    <tr>
        <th scope="col">Store Id Number</th>
        <th scope="col">Id Number</th>
        <th scope="col">Product Name </th>
        <th scope="col">Price</th>
        <th scope="col">Description</th>
        <th scope="col">Category</th>
        <th scope="col">Available</th>



    </tr>
    @foreach(LineItemVM line in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => line.StoreID)</td>
            <td>@Html.DisplayFor(modelItem => line.item.Id)</td>
            <td>@Html.DisplayFor(modelItem => line.item.Name)</td>
            <td>@Html.DisplayFor(modelItem => line.item.Price)</td>
            <td>@Html.DisplayFor(modelItem => line.item.Description)</td>
            <td>@Html.DisplayFor(modelItem => line.item.Category)</td>
            <td>@Html.DisplayFor(modelItem => line.Quantity)</td>
             <td>
                <!--First parameter of ActionLink is the name it will give for this element -->
                <!--Second parameter will point to the action of the restaurant controller-->
                <!--Third parameter will give the information from the view to the controller-->
               @* <button class="btn btn-danger">@Html.ActionLink("Purchase","Purchase",new {p_id = line.item.Id, p_quantity = line.Quantity,p_sid=line.StoreID, p_price=line.item.Price}, new {@style="color: white;"})</button> *@
               <button class="btn btn-danger">@Html.ActionLink("Add to Cart","Cart",new {p_id = line.item.Id, p_quantity = line.Quantity,p_sid=line.StoreID, p_price=line.item.Price,p_name=line.item.Name}, new {@style="color: white;"})</button>
            </td>
        </tr>
    }
    
        
    
</table>