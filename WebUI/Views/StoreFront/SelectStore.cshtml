
@model IEnumerable<WebUI.Models.StoreFrontVM>
<link rel="stylesheet" href="~/css/Tables.css" />
    <body>
  <a class="btn btn-info text-red" asp-controller="StoreFront" asp-action="CreateStore">Create A Store</a>
<a class="btn btn-info text-blue" asp-controller="StoreFront" asp-action="CreateProduct">Create A Product</a>
                 
<h1>List of StoreFronts</h1>

<table class="table table-striped table-hover" >
	<caption>Table Provides a list of stores currently establsihed in the database</caption>
    <tr>
        <th scope="col">Id Number</th>
        <th scope="col">Store Name </th>
        <th scope="col">Store Location</th>
        <th scope="col" colspan="3">Features</th>


    </tr>
    @foreach(StoreFrontVM Store in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => Store.Id)</td>
            <td>@Html.DisplayFor(modelItem => Store.Name)</td>
            <td>@Html.DisplayFor(modelItem => Store.Address)</td>
                
                <!--First parameter of ActionLink is the name it will give for this element -->
                <!--Second parameter will point to the action of the restaurant controller-->
                <!--Third parameter will give the information from the view to the controller-->
                <td > <button class="btn btn-outline-primary">@Html.ActionLink("ReplenishInventory","StoreItems",new {p_id = Store.Id,p_sid=Store.Id}, new {@style="color: Black;"})</button> </td>
                <td><button class="btn btn-outline-secondary">@Html.ActionLink("Add Item to Store","AddItemToStore",new {p_id = Store.Id,p_sid=Store.Id}, new {@style="color: Black;"})</button> </td>
                 <td><button class="btn btn-outline-info">@Html.ActionLink("View Store Order History","ShowStoreHistory",new {p_sid=Store.Id}, new {@style="color: Black;"})</button>  </td>
   
        </tr>
    }
    
        
    
</table>
</body>