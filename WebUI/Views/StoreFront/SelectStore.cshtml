@{

}

@* This tells you that this view will expect to retrieve a list of RestaurantVM *@
@model IEnumerable<WebUI.Models.StoreFrontVM>

<h1>List of StoreFronts</h1>

<table class="table table-striped table-hover">
    <tr>
        <th>Id Number</th>
        <th>Store Name </th>
        <th>Store Location</th>


    </tr>
    @foreach(StoreFrontVM item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                 <td>
                <!--First parameter of ActionLink is the name it will give for this element -->
                <!--Second parameter will point to the action of the restaurant controller-->
                <!--Third parameter will give the information from the view to the controller-->
                <button class="btn btn-danger">@Html.ActionLink("ReplenishInventory","StoreItems",new {p_id = item.Id,p_sid=item.Id}, new {@style="color: white;"})</button>
                <button class="btn btn-danger">@Html.ActionLink("Add Item to Store","AddItemToStore",new {p_id = item.Id,p_sid=item.Id}, new {@style="color: white;"})</button>
                 </td>
            
            
        </tr>
    }
    
        
    
</table>