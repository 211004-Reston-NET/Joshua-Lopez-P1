
@model IEnumerable<WebUI.Models.StoreFrontVM>
    <style>
body {
	background: #fafafa;
	color: #444;
	font: 100%/30px 'Helvetica Neue', helvetica, arial, sans-serif;
	text-shadow: 0 1px 0 #fff;
}

strong {
	font-weight: bold; 
}

em {
	font-style: italic; 
}

table {
	background: #f5f5f5;
	border-collapse: separate;
	box-shadow: inset 0 1px 0 #fff;
	font-size: 15px;
	line-height: 24px;
	margin: 30px auto;
	text-align: left;
	width: 800px;
}	

th {
	background: linear-gradient(#777, #444);
	border-left: 1px solid #555;
	border-right: 1px solid #777;
	border-top: 1px solid #555;
	border-bottom: 1px solid #333;
	box-shadow: inset 0 1px 0 #999;
	color: #fff;
  font-weight: bold;
	padding: 10px 15px;
	position: relative;
	text-shadow: 0 1px 0 #000;	
}

th:after {
	background: linear-gradient(rgba(255,255,255,0), rgba(255,255,255,.08));
	content: '';
	display: block;
	height: 25%;
	left: 0;
	margin: 1px 0 0 0;
	position: absolute;
	top: 25%;
	width: 100%;
}

th:first-child {
	border-left: 1px solid #777;	
	box-shadow: inset 1px 1px 0 #999;
}

th:last-child {
	box-shadow: inset -1px 1px 0 #999;
}

td {
	border-right: 1px solid #fff;
	border-left: 1px solid #e8e8e8;
	border-top: 1px solid #fff;
	border-bottom: 1px solid #e8e8e8;
	padding: 10px 15px;
	position: relative;
	transition: all 300ms;
}

td:first-child {
	box-shadow: inset 1px 0 0 #fff;
}	

td:last-child {
	border-right: 1px solid #e8e8e8;
	box-shadow: inset -1px 0 0 #fff;
}	


tr:nth-child(odd) td {
	background: #f1f1f1 ;	
}

tr:last-of-type td {
	box-shadow: inset 0 -1px 0 #fff; 
}

tr:last-of-type td:first-child {
	box-shadow: inset 1px -1px 0 #fff;
}	

tr:last-of-type td:last-child {
	box-shadow: inset -1px -1px 0 #fff;
}	

tbody:hover td {
	color: transparent;
	text-shadow: 0 0 3px #aaa;
}

tbody:hover tr:hover td {
	color: #444;
	text-shadow: 0 1px 0 #fff;
}
    </style>
    <body>
  <a class="btn btn-info text-red" asp-controller="StoreFront" asp-action="CreateStore">Create A Store</a>
<a class="btn btn-info text-blue" asp-controller="StoreFront" asp-action="CreateProduct">Create A Product</a>
                 
<h1>List of StoreFronts</h1>

<table >
    <tr>
        <th scope="col">Id Number</th>
        <th scope="col">Store Name </th>
        <th scope="col">Store Location</th>
        <th scope="col" colspan="3">Features</th>


    </tr>
    @foreach(StoreFrontVM Store in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => Store.Id)</td>
            <td>@Html.DisplayFor(modelItem => Store.Name)</td>
            <td>@Html.DisplayFor(modelItem => Store.Address)</td>
                
                <!--First parameter of ActionLink is the name it will give for this element -->
                <!--Second parameter will point to the action of the restaurant controller-->
                <!--Third parameter will give the information from the view to the controller-->
                <td > <button class="btn btn-outline-primary">@Html.ActionLink("ReplenishInventory","StoreItems",new {p_id = Store.Id,p_sid=Store.Id}, new {@style="color: Black;"})</button> </td>
                <td><button class="btn btn-outline-secondary">@Html.ActionLink("Add Item to Store","AddItemToStore",new {p_id = Store.Id,p_sid=Store.Id}, new {@style="color: Black;"})</button> </td>
                 <td><button class="btn btn-outline-info">@Html.ActionLink("View Store Order History","ShowStoreHistory",new {p_sid=Store.Id}, new {@style="color: Black;"})</button>  </td>
   
        </tr>
    }
    
        
    
</table>
</body>